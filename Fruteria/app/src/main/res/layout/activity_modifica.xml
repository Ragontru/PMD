<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ui.ModificaActivity">


    <EditText
        android:id="@+id/nombreMFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="68dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/varieMFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/nombreMFruta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nombreMFruta"
        app:layout_constraintTop_toBottomOf="@+id/nombreMFruta" />

    <TextView
        android:id="@+id/varieFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Variedad"
        app:layout_constraintBottom_toBottomOf="@+id/varieMFruta"
        app:layout_constraintStart_toStartOf="@+id/nombreFruta"
        app:layout_constraintTop_toTopOf="@+id/varieMFruta"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/nombreFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Nombre"
        app:layout_constraintBottom_toBottomOf="@+id/nombreMFruta"
        app:layout_constraintEnd_toStartOf="@+id/nombreMFruta"
        app:layout_constraintTop_toTopOf="@+id/nombreMFruta"
        app:layout_constraintVertical_bias="0.346" />

    <Button
        android:id="@+id/button_modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="modificarFruta"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>